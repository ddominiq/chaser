<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_dark">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/downButton"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chased"
        android:id="@+id/chasedButton"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/upButton"
        android:layout_above="@+id/rightButton"
        android:layout_centerHorizontal="true"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/rightButton"
        android:minWidth="100dp"
        android:minHeight="50dp"
        android:layout_above="@+id/downButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/leftButton"
        android:layout_below="@+id/upButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="100dp"
        android:minHeight="50dp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_above="@+id/downButton"
        android:layout_centerHorizontal="true"
        android:minWidth="100dp"
        android:background="#f51e1e"
        android:textColor="@android:color/white"
        android:minHeight="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="yPosition"
        android:id="@+id/yPositionText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/leftButton"
        android:layout_alignEnd="@+id/leftButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="xPosition"
        android:id="@+id/xPositionText"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/rightButton"
        android:layout_alignStart="@+id/rightButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/homeButton"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/chasedButton"
        android:layout_alignStart="@+id/chasedButton"/>

</RelativeLayout>




